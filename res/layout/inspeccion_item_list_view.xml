<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fondo"
    android:layout_width="fill_parent"
    android:layout_height="75dp"
    android:background="@drawable/bottomborder" >

    <TextView
        android:id="@+id/inspeccionid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="id"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/inspeccionid"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/calle"
            style="@style/tipografia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="calle"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/altura"
            style="@style/tipografia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="456"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/observacion"
            style="@style/tipografia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="observacion"
            android:textSize="19sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/fecha"
        style="@style/tipografia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="XX/XX/XX"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/estadoIcon"
        android:layout_width="71dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_camera" />

    <ImageView
        android:id="@+id/riesgoIcon"
        android:layout_width="71dp"
        android:layout_height="65dp"
        android:layout_toLeftOf="@+id/estadoIcon"
        android:layout_centerVertical="true"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/btn_red" />

</RelativeLayout>